<h2>User info</h2>

<table class="table">
  <tr>
    <th>name</th>
    <th>user.name</th>
  </tr>

  <tr>
    <th>introduction</th>
    <th>user.introduction</th>
  </tr>
</table>

<h2>New book</h2>

<%= form_with model: book do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book', class: "btn btn-success" %>

<% end %>