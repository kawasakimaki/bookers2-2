<!--左側-->
<%= render 'left', book: @book, user: current_user %>

<!--右側-->

<h2>Books</h2>

<table class="table">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
</table>

<table class="table table-hover">
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(50, 50) %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>

