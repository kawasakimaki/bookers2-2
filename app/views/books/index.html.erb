<!--左側-->
<%= render 'left', book: @book, user: current_user %>

<!--右側-->

<h2>Books</h2>

<table>

  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>

</table>
