<!--左側-->
<%= render 'left', book: @book, user: @user %>

<!--右側-->
<h4>Book detail</h4>

<table class="table">
  <tr>
    <td>画像</td>
    <td><%= link_to @book.title, book_path(@book.id) %></td>
    <td><%= @book.body %></td>
    <td><%= link_to 'Edit', edit_book_path, class: "btn btn-success" %></td>
    <td><%= link_to 'Destroy', book_path, class: "btn btn-sm btn-danger", method: :delete %></td>
  </tr>
</table>
