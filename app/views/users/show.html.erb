<!--左側-->
<%= render 'books/left', book: @book, user: @user %>

<!--右側-->
<h4>Books</h4>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |books| %>
      <tr>
        <td><%= image_tag books.user.get_profile_image(100, 100) %></td>
        <td><%= link_to books.title, book_path(books.id) %></td>
        <td><%= books.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>