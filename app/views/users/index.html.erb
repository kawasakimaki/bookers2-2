<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!--左側-->
      <%= render 'books/left', book: @book, user: current_user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <!--右側-->
      <h4>Users</h4>

      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>

        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100, 100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
